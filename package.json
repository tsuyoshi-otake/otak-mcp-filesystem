{
  "name": "otak-mcp-filesystem",
  "version": "1.1.0",
  "description": "MCP server for filesystem operations with SSE/HTTP streaming support",
  "main": "dist/index.js",
  "bin": {
    "otak-mcp-filesystem": "./bin/mcp-filesystem.js",
    "otak-mcp-filesystem-uninstall": "./bin/uninstall.js"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "bin/**/*",
    "dist/**/*",
    "src/**/*",
    "scripts/**/*",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tsuyoshi-otake/otak-mcp-filesystem.git"
  },
  "homepage": "https://github.com/tsuyoshi-otake/otak-mcp-filesystem#readme",
  "bugs": {
    "url": "https://github.com/tsuyoshi-otake/otak-mcp-filesystem/issues"
  },
  "scripts": {
    "dev": "nodemon --exec tsx src/index.ts",
    "dev:http": "nodemon --exec tsx src/http-server.ts",
    "dev:mcp": "nodemon --exec tsx src/mcp-http-server.ts",
    "dev:optimized": "nodemon --exec tsx src/index-optimized.ts",
    "build": "node scripts/build.js",
    "start": "node dist/index.js",
    "start:http": "node dist/http-server.js",
    "start:mcp": "node dist/mcp-http-server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepublishOnly": "npm run build",
    "prepare": "npm run build"
  },
  "keywords": ["mcp", "model-context-protocol", "filesystem", "sse", "streaming"],
  "author": "Tsuyoshi Otake",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.15.1",
    "dotenv": "^17.2.0",
    "express": "^5.1.0"
  },
  "optionalDependencies": {
    "tsx": "^4.20.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.14",
    "nodemon": "^3.1.10",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
